{% extends "layouts/_show.twig" %}

{% set resource = "galaxies" %}

{% set navIndex = 3 %}

{% set unit_of_measure = "lightyears" %}

{% block addt_content %}
<h4>Stars</h4>
<section class="grid">
{% for star in record.Stars %}
	<a href="{{star.src}}" class="image-container">
		<img src="{{star.image.src}}" alt="{{star.image.alt}}"/>
		<p>{{star.name}}</p>
	</a>
{% endfor %}
</section>

<h4>Planets</h4>
<section class="grid">
{% for planet in record.planets %}
	<a href="{{planet.src}}" class="image-container">
		<img src="{{planet.image.src}}" alt="{{planet.image.alt}}"/>
		<p>{{planet.name}}</p>
	</a>
{% endfor %}
</section>

{% endblock %}


